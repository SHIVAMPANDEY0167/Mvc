@model EmployeeViewModel

<div class="col-sm-12 col-xl-6">
    <div class="rounded h-100 p-4" style="background-color: #e6e6e6">
        <h6 class="mb-4">Delete Page</h6>
        <form asp-controller="Employee" asp-action="Delete" method="post">
            <div class="row mb-3">
                <label asp-for="FirstName" class="col-sm-2 col-form-label">FirstName</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="FirstName">
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="LastName" class="col-sm-2 col-form-label">LastName</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="LastName">
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Age" class="col-sm-2 col-form-label">Age</label>
                <div class="col-sm-10">
                    <input asp-for="Age">
                </div>
            </div>
            <br />
            <fieldset class="row mb-3">
                <legend class="col-form-label col-sm-2 pt-0">Gender</legend>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Gender"
                               value="Male" checked>
                        <label class="form-check-label">
                            Male
                        </label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Gender"
                               value="Female">
                        <label class="form-check-label">
                            Female
                        </label>
                    </div>
                </div>
            </fieldset>

            <br />
            <label asp-for="Department">Department</label>
            <select asp-for="Department" name="Department">
                <option value=".Net">.Net</option>
                <option value="Front End">Front End</option>
                <option value="Ui">Ui</option>
                <option value="ML">ML</option>
                <option value="Database">Database</option>
            </select>
            <br />
            MeritalStatus:
            <input type="checkbox" asp-for="MeritalStatus">
            <label asp-for="MeritalStatus">Married</label>


            <br />
            <br />
            <a asp-controller="Employee" asp-action="Index">
                <input class="btn btn-danger" type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete @Model.FirstName @Model.LastName')" />
            </a>

            <a asp-controller="Employee" asp-action="Index">
                <input class="btn btn-primary" type="button" value="Back" />
            </a>
        </form>
    </div>
</div>