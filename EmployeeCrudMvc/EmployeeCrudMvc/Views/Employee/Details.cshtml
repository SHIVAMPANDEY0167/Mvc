@model EmployeeViewModel

<div class="col-sm-12 col-xl-6">
    <div class="rounded h-100 p-4" style="background-color: #e6e6e6">
        <h6 class="mb-4">View Page</h6>
        <form>
            <div class="row mb-3">
                <label asp-for="FirstName" class="col-sm-2 col-form-label">FirstName</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="FirstName" disabled>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="LastName" class="col-sm-2 col-form-label">LastName</label>
                <div class="col-sm-10">
                    <input type="text" asp-for="LastName" disabled>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Age" class="col-sm-2 col-form-label">Age</label>
                <div class="col-sm-10">
                    <input asp-for="Age" disabled>
                </div>
            </div>
            <br />
            <fieldset class="row mb-3">
                <legend class="col-form-label col-sm-2 pt-0">Gender</legend>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Gender"
                               value="Male" checked disabled>
                        <label class="form-check-label">
                            Male
                        </label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Gender"
                               value="Female" disabled>
                        <label class="form-check-label">
                            Female
                        </label>
                    </div>
                </div>
            </fieldset>

            <br />
            <label asp-for="Department">Department</label>
            <div class="col-sm-10">
                <input asp-for="Department" disabled>
            </div>
            <br />
            <label asp-for="MeritalStatus"></label>
            <input type="checkbox" asp-for="MeritalStatus" disabled>
            <label asp-for="MeritalStatus">Married</label>


            <br />
            <br />
           
            <button class="btn btn-primary" asp-controller="Employee" asp-action="Edit" asp-route-id="@Model.EmployeeId">Edit</button>

            <a asp-controller="Employee" asp-action="Index">
                <input class="btn btn-primary" type="button" value="Back" />
            </a>
        </form>
    </div>
</div>